<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UdacityMusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="songname" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

 <style name="singername" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
     <item name="android:maxLines">1</item>
     <item name="android:ellipsize">end</item>
    </style>

    <style name="smallImageThumbnail" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

  <style name="cancelButton" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
      <item name="android:textAllCaps">false</item>
      <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:scaleType">fitXY</item>
      <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="containerViewForSongs" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@id/mysongs</item>
    </style>

    <style name="nowPlayingFooter" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:visibility">invisible</item>
       <item name="android:background">@color/design_default_color_primary_dark</item>
    </style>

    <style name="SongAndSingerNameContainer" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">8</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>

 <style name="GridImageView" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
     <item name="android:scaleType">fitXY</item>
    </style>

<style name="GridSong" parent="Theme.AppCompat.DayNight.DarkActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
    </style>

<style name="GridSinger" parent="Theme.AppCompat.DayNight.DarkActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>

    <item name="android:textStyle">italic</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
    </style>

</resources>