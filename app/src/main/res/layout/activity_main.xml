<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primarymedium">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY Songs"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/mysongs"
        android:layout_margin="8dp"
        />
<Switch
    android:id="@+id/switchstate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:text="Grid-View"
    android:layout_margin="8dp"/>
   <ListView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/songlistview"
       android:layout_below="@id/mysongs"
         />
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/songsGridView"
        android:layout_below="@id/mysongs"
        android:numColumns="2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nowplayingfooter"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@color/design_default_color_primary_dark"
        android:backgroundTint="@color/design_default_color_primary_dark"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:src="@drawable/finaldesign"
            android:scaleType="fitXY"
            android:layout_margin="8dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Songname"
                    android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/footersongname"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Songname"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:id="@+id/footersinger"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="X"
            android:textColor="@color/white"
            android:id="@+id/stopcurrentsong"
            android:onClick="stopcurrentplayingsong"
            style="@style/Widget.AppCompat.Button.Borderless"

            />


    </LinearLayout>
</RelativeLayout>